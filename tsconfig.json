{
    "compilerOptions": {
        "target": "es2015",
        "module": "esNext",
        "lib": ["dom", "es2015"],
        "declaration": true,
        "strict": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "inlineSourceMap": true,
        "pretty": true,
        "suppressImplicitAnyIndexErrors": true,
        "skipLibCheck": true,
        "declarationMap": true,
        "preserveConstEnums": true,
        "composite": true
    },
    "references": [
        { "path": "./extensions" },
        { "path": "./ui" },
        { "path": "./documentation" }
    ]
}